page {
    box-sizing: border-box;
    padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  }
  
  .pane-con {
    margin: 20rpx 0;
  }
  
  .tabs-pane {
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    border: 1px solid lightgrey;
  }
  
  .tabs-pane:nth-last-child(1) {
    margin-right: 0;
  }
  
  .tabs-pane.active {
    background: #5495df;
    border-color: #5495df;
    color: #fff;
  }
  .home{
      width: 100%;
      height: 100%;
      background-color: #ccc;
  }
  .home-page-footer {
    background-color: #F7F7F7;
    display: flex;
    flex-direction: row;
    align-items: center;
    position: fixed;
    width: 100%;
    bottom: 0rpx;
  }
  
  .talkWrapAn {
    padding-left: 20rpx;
    display: flex;
  }
  
  .talkWrapMe {
    padding-right: 20rpx;
    display: flex;
    flex-direction: row-reverse;
  }
  
  .talkBubble {
    width: 467rpx;
    margin: 20rpx;
    font-size: 40rpx;
    border-radius: 2%;
    padding: 10rpx;
    height: auto;
    background-color: greenyellow;
  }